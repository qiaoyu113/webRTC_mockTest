{
    "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./src",
      "types": ["node", "ws"],
      "allowJs": true,
      "resolveJsonModule": true
    },
    "include": ["src/server.ts", "src/heartbeatTestServer.ts", "src/utils/**/*"],
    "exclude": ["node_modules"]
  }